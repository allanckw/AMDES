<Window x:Class="AMDES_KBS.frmSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmSetting" Height="600" Width="800" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <GroupBox x:Name="gbSettings" Header="Settings" FontSize="15" FontWeight="Bold">
                <StackPanel x:Name="stkpnlDivider" Orientation="Horizontal">
                    <StackPanel x:Name="stkpnlSettingMenu">
                        <Button x:Name="btnQuestion" Width="100" Content="Question" Margin="0,0,0,5" Click="btnQuestion_Click" />
                        <Button x:Name="btnExitSetting" Width="100" Content="Exit" Margin="0,0,0,5" Click="btnExitSetting_Click" />
                    </StackPanel>
                    <Frame x:Name="SettingFrame" NavigationUIVisibility="Hidden" Width="650" Height="530" Margin="10,0,0,0" ></Frame>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
