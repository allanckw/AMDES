<Window x:Class="AMDES_KBS.frmMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmMain" Height="600" Width="900" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <StackPanel x:Name="stkpnlMenuHeader" Height="50" Orientation="Horizontal" >
                <Button Width="100" Height="25" Content="Menu1" Margin="5"></Button>
                <Button Width="100" Height="25" Content="Menu2" Margin="5"></Button>
                <Button Width="100" Height="25" Content="Setting" Margin="5"></Button>
                <StackPanel x:Name="stkpnlSearchBox" Orientation="Horizontal" Margin="180,5,5,5">
                    <TextBox x:Name="txtSearchCriteria" Width="250" Height="25" ToolTip="Search by NRIC or Name"></TextBox>
                    <Button x:Name="btnSearch" Width="100" Height="25" Content="Search" Margin="5"></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="stkpnlDisplay" Orientation="Horizontal">
                <GroupBox Header="List of Patients" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" Height="510" Foreground="Black" FontSize="13.333" FontFamily="Stencil" Margin="5,0,0,0">
                    <ListBox x:Name="lstPatientList" Margin="1,1,0,0" FontFamily="Tahoma" FontSize="12" 
        				FontWeight="Normal" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="480" Width="188" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5" Orientation="Vertical">
                                    <WrapPanel Orientation="Horizontal"  >
                                        <TextBlock Text="Name " Foreground="DarkBlue" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap"  Foreground="DarkBlue" FontWeight="Bold"/>
                                    </WrapPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <Frame x:Name="frame" Width="670" Height="510" NavigationUIVisibility="Hidden" TabIndex="1" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="False" UseLayoutRounding="True" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
