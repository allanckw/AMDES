<UserControl x:Class="AMDES_KBS.QuestionControl.ucQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="660">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="txtQuestion" IsReadOnly="true" TextWrapping="Wrap" Width="500" Background="{x:Null}" Text="" BorderBrush="{x:Null}" Margin="10,0,0,10"/>
        <Button x:Name="btnYes" Content="Yes" Height="25" Width="50" VerticalAlignment="Top" Margin="20,0,0,0" Background="#FF16BA27" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" Height="25" Width="50" VerticalAlignment="Top" Margin="20,0,0,0" Background="#FFF90404" Click="btnNo_Click"/>
    </StackPanel>
</UserControl>
