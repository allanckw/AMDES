<Window x:Class="AMDES_KBS.frmQuestionGroupSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmQuestionGroupSetting" Height="110" Width="300" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <RadioButton x:Name="radOR" IsChecked="True" GroupName="QuestionGroup" Content="OR" Margin="0,0,50,0" FontSize="14" Tag="0"  />
                <RadioButton x:Name="radAND" GroupName="QuestionGroup" Content="AND" Margin="0,0,50,0" FontSize="14" Tag="1"  />
                <RadioButton x:Name="radCOUNT" GroupName="QuestionGroup" Content="COUNT" Margin="0,0,0,0" FontSize="14" Tag="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="OK" Width="80" Margin="10" FontSize="14" Click="btnOK_Click"></Button>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="10" FontSize="14" Click="btnCancel_Click"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
