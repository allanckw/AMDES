<UserControl x:Class="AMDES_KBS.ucDiagnosis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ThemedControlsLibrary="clr-namespace:ThemedControlsLibrary;assembly=ThemedControlsLibrary"
             mc:Ignorable="d"
             d:DesignWidth="660">
    <Grid x:Name="gridDiagnosis">
        <StackPanel x:Name="stkpnlDiagnosis" Margin="0,0,0,20">
            <StackPanel x:Name="stkpnlDiagnosisHeader" Orientation="Vertical">
                <StackPanel>
                    <Label x:Name="lblRuleID" Width="auto" Height="30" Margin="0,0,0,0" FontSize="12" FontFamily="Tahoma" FontWeight="Bold" />
                </StackPanel>
                <StackPanel>
                    <Label x:Name="lblSymptonsText" Content="The patient has the following symptoms stated in the questionnaire:" Margin="0,10,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="stkpnlSymptons" Margin="20,0,0,0">
            </StackPanel>
            <TextBox x:Name="txtDiagnosisMessage" IsReadOnly="true" TextAlignment="Left" TextWrapping="Wrap" BorderThickness="0" Background="Transparent"  Margin="0,10,0,0" />
            <StackPanel x:Name="stkpnlDiagnosisLink" Visibility="Collapsed" >
                <!--<Label x:Name="lblLink" Height="30" Foreground="Red" Margin="0,10,0,0" Content="Link out to resource" >

                </Label>-->
                <TextBlock x:Name="txtLink" TextWrapping="Wrap">
                    <Hyperlink Click="lblLink_Click">
                        <Run Text="Link out to resource"/>
                    </Hyperlink>
               </TextBlock>
                <!--<ThemedControlsLibrary:LinkLabel Height="30" Click="lblLink_Click" x:Name="lblLink" Foreground="Blue" HoverForeground="Red" Margin="0,10,0,0" Content="Link out to resource"/>-->
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
